generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Male
  Female
  Other
}

model User_info {
  user_id Int @id @default(autoincrement())
  first_name String
  last_name String
  age Int
  gender Gender
  birth_date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // deletedAt DateTime @default(now()) // FIXME: Adicionar deletado
  user_credentials User_credentials?
}

model User_credentials {
  credentials_id Int @id @default(autoincrement())
  email String @unique
  username String @unique
  password String
  rank Int @default(1)
  user_info User_info @relation(fields: [user_infoId], references: [user_id], onDelete: Cascade)
  user_infoId Int @unique
}

model Deleted_users {
  deleted_user_id Int @id @default(autoincrement())
  user_id Int
  first_name String
  last_name String
  age Int
  gender Gender
  birth_date  DateTime
  createdAt DateTime
  updatedAt DateTime
  email String @unique
  username String @unique
  password String
  deletedAt DateTime @default(now())
}
